/* pages/start/start.wxss */
.start-container {
  padding-top: 100px;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.todo-logo {
  width: 120px;
  height: 120px;
  border-radius: 999px;
  box-shadow: 0 2px 8px 0 #dcdcdc;
}
.start-btn {
  height: 42px;
  width: 160px !important;
  font-size: 14px;
  background: #ffffff;
  border-radius: 999px;
  box-shadow: 0 2px 8px 0 #dcdcdc;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0px;
  margin: 0px;
}
.app-name {
  margin-top: 40px;
  font-size: 18px;
  font-weight: bold;
}
.app-subtitle {
  font-size: 14px;
  color: #8b8b8b;
  font-weight: bold;
}