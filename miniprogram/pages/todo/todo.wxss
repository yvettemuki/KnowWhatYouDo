/* pages/todo/todo.wxss */
.main-container {
  padding: 20px;
}
.todo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: #ffffff;

}
.todo-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 10px;
  
}
.todo-content {
  height: 40px;
  width: 65%;
  color: #ffffff;
  background-color: #1C86EE;
  box-shadow: 0 2px 8px 0px #dcdcdc;
  line-height: 40px;
  border-radius: 999px;
  padding: 0 20px;
  
}
.todo-index {
  height: 40px;
  width: 40px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  border-radius: 999px;
  font-size: 12px;
  font-weight: bold;
  box-shadow: 0 2px 8px 0px #dcdcdc;
}
.todo-icon {
  width: 20px;
  height: 20px;
  margin-left: 8px;
}
.add {
		width: 12px;
		height: 12px;
		transition: color .25s;
		position: relative;
		border: none;
		cursor: pointer;
}
.add::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 12px;
  margin-left: -6px;
  margin-top: -1px;
  border-top: 2px solid #ffffff;
}
.add::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  height: 12px;
  margin-top: -6px;
  margin-left: -1px;
  border-left: 2px solid #ffffff;
}
.tool-btn {
  width: calc(12vh);
  height: calc(12vh);
  border-radius: 999px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20px;
  margin-top:20px;
  box-shadow: 0 2px 8px 0px #dcdcdc;
}
.add-btn {
  background-color: #42b983;
}
.tool-container {
  position: fixed;
  bottom: 20px;
  right: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.done-btn {
  color: #ffffff;
  font-weight: bold;
  font-size: 12px;
  background-color: #315B96;
}
.new-btn {
  background-color: #EC9B3B;
  color: #ffffff;
  font-weight: bold;
  font-size: 12px;
}
.add-item-form {
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: 999;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2px 8px 0px #dcdcdc;
}
.form-font {
  font-size: 20px;
  font-weight: bold;
  margin-top: 50%;
}
.form-input {
  height: 20px;
  width: 70%;
  border: 2px solid #1C86EE;
  border-radius: 999px;
  padding: 10px 20px;
  margin-top: 20px;
  font-size: 18px;
}
.confirm-btn {
  margin-top: 40px;
  height: 80px;
  width: 80px;
  border-radius: 999px;
  background-color: #1C86EE;
  color: #ffffff;
  font-size: 12px;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}