/* pages/initialSetting/initialSetting.wxss */
.initial-setting-container {
  margin: 20px;
  padding: 20px;
  box-shadow: 0 2px 8px 0 #dcdcdc;
  border-radius: 20px;
}
.form-font {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
}
.form-input {
  height: 40px;
  border-bottom: 1px solid #333333;
  padding: 0px 2px;
  margin-bottom: 20px;
}
.confirm-btn {
  width: 80px;
  height: 40px;
  border-radius: 999px;
  color: #ffffff;
  line-height: 40px;
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  background-color: #1C86EE;
}